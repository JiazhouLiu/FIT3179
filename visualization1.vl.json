{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Australian Inbound and Outbound Flights",
  "width": 800,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/tonyz1260/FIT3179/main/Week10Homework/data/InternationalTotalFlights.csv",
    "format": {"parse": {"Total_Flights": "number"}}
  },
  "params": [
    {
      "name": "Year_Selected",
      "value": 2018,
      "bind": {
        "input": "range",
        "min": 2003,
        "max": 2022,
        "step": 1,
        "name": "Year"
      }
    }
  ],
  "transform": [
    {"filter": "datum.Year == Year_Selected"},
    {
      "calculate": "datum.Type == 'Inbound' ? 'Inbound' : 'Outbound'",
      "as": "Flight_Type"
    },
    {"calculate": "abs(datum.Total_Flights)", "as": "Abs_Flights"},
    {
      "calculate": "datum.Type == 'Inbound' ? datum.Total_Flights : -datum.Total_Flights",
      "as": "Final_Flights"
    }
  ],
  "encoding": {
    "x": {
      "field": "Australian_City",
      "type": "nominal",
      "title": "Australian City",
      "sort": {"field": "Abs_Flights", "order": "descending"},
      "axis": {"ticks": false, "labelAngle": 0}
    }
  },
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "Final_Flights",
          "type": "quantitative",
          "title": "Total Flights",
          "scale": {"domain": [-50000, 50000]},
          "axis": {"ticks": false, "labels": false},
          "stack": null
        },
        "color": {
          "field": "Flight_Type",
          "type": "nominal",
          "scale": {"range": ["blue", "red"]}
        },
        "tooltip": [
          {
            "field": "Australian_City",
            "type": "nominal",
            "title": "Australian City"
          },
          {"field": "Flight_Type", "type": "nominal", "title": "Flight Type"},
          {
            "field": "Total_Flights",
            "type": "quantitative",
            "title": "Total Flights"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "dy": -10,
        "fontSize": 12
      },
      "encoding": {
        "y": {"field": "Final_Flights", "type": "quantitative"},
        "text": {
          "condition": {
            "test": "datum.Flight_Type == 'Inbound'",
            "field": "Final_Flights",
            "type": "quantitative",
            "format": ".0f"
          },
          "value": ""
        },
        "color": {
          "field": "Flight_Type",
          "type": "nominal",
          "scale": {"range": ["blue", "red"]}
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "dy": 10,
        "fontSize": 12
      },
      "encoding": {
        "y": {"field": "Final_Flights", "type": "quantitative"},
        "text": {
          "condition": {
            "test": "datum.Flight_Type == 'Outbound'",
            "field": "Total_Flights",
            "type": "quantitative",
            "format": ".0f"
          },
          "value": ""
        },
        "color": {
          "field": "Flight_Type",
          "type": "nominal",
          "scale": {"range": ["blue", "red"]}
        }
      }
    }
  ],
  "config": {"view": {"stroke": "transparent"}}
}
